<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patients"
    android:background="#232222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/WelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/WelcomeTextPat"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/FullNamesPat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:hint="Full names(2 or More)"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/signup_layout"/>

        <EditText
            android:id="@+id/Gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:hint="Gender"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/signup_layout"/>


        <EditText
            android:id="@+id/AgePat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/signup_layout"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/LocationPat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:hint="Location"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/signup_layout"/>

        <EditText
            android:id="@+id/Id_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:hint="ID_No"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/signup_layout"/>

        <EditText
            android:id="@+id/PhonePat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:hint="Phone Number"
            android:ems="10"
            android:inputType="phone"
            android:background="@drawable/signup_layout"/>

        <EditText
            android:id="@+id/EmailPat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:hint="Email Address"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@drawable/signup_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <EditText
                android:id="@+id/PasswordPat"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:hint="Password"
                android:textColor="#000000"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/signup_layout"/>

            <ImageView
                android:id="@+id/img_show_pat"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_password"
                android:tag="Show"
                android:layout_margin="5dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/btn_signup_Pat"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/Signup"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0A2DEF"
            />
